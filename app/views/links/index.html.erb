<h1>ThoughtBox</h1>

<%= form_tag '/links' do %>
  Title: <%= text_field_tag :title %>
  URL: <%= text_field_tag :url %>
  <%= submit_tag "Submit" %>
<% end %>

<ul>
  <% @links.each do |l| %>
    <ul>
      <% if l.read %>
        <li><a class="read" href="<%= l.url %>"><%= l.title %></a></li>
        <li>Read: <%= l.read %></li>
        <%= button_to "mark as unread", mark_unread_path(l.id) %>
      <% else %>
        <li><a class="unread" href="<%= l.url %>"><%= l.title %></a></li>
        <li>Read: <%= l.read %></li>
        <%= button_to "mark as read", mark_read_path(l.id) %>
      <% end %>
      <%= link_to "edit", edit_link_path(l.id) %>
    </ul>
    <br />
  <% end %>
</ul>
